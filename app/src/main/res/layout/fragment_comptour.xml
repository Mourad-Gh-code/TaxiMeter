<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1d23"
    >

    <!-- Header with Logo and Profile Icon -->

    <!-- Map Container -->
    <RelativeLayout
        android:id="@+id/maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/fare_container_bg">

        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="20dp">


        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fareContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/maps"
        android:layout_marginStart="24dp"
        android:layout_marginTop="-23dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/fare_container_bg"
        android:padding="10dp">

        <!-- Progress Circle Background -->
        <View
            android:id="@+id/progressCircle"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_progress_bg" />

        <!-- Fare Content -->
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <!-- Total Fare Label -->

            <!-- Fare Amount -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:text="TOTAL FARE"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fareAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="00.00 DH"
                android:textColor="#FFD700"
                android:textSize="56sp"
                android:textStyle="bold" />

            <!-- Distance and Time -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Distance -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="DISTANCE:"
                        android:textColor="#6B7885"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/distanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="00.0 km"
                        android:textColor="#FFFFFF"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Time -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="TIME:"
                        android:textColor="#6B7885"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="00:00 min"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Start Trip Button -->

            <Button
                android:id="@+id/btnStartTrip"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="42dp"
                android:background="@drawable/start_trip_button_bg"
                android:fontFamily="sans-serif-medium"
                android:text="START TRIP"
                android:textColor="#165708"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEndTrip"
                android:layout_width="160dp"
                android:layout_height="wrap_content"

                android:background="@drawable/end_trip_button_bg"
                android:fontFamily="sans-serif-medium"
                android:text="END TRIP"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- End Trip Button -->
    </RelativeLayout>


</RelativeLayout>