<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252626">

    <!-- Header -->

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Profile Avatar -->

            <!-- User Name -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center">

                <View
                    android:id="@+id/avatarCircle"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/avatar_circle_bg" />

                <TextView
                    android:id="@+id/avatarInitial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/avatarCircle"
                    android:layout_alignEnd="@+id/avatarCircle"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="52dp"
                    android:fontFamily="sans-serif"
                    android:text="J"
                    android:textColor="#FFEB3B"
                    android:textSize="64sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="John Smith"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- Email -->
            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="john.smith@email.com"
                android:textColor="#DED68B"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

            <!-- Menu Items Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical">

                <!-- More Informations -->
                <RelativeLayout
                    android:id="@+id/menuMoreInfo"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/dialog_bg"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/iconMoreInfo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_info"
                        app:tint="#FFEB3B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/iconMoreInfo"
                        android:layout_marginStart="16dp"
                        android:text="More Informations"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#FFEB3B" />
                </RelativeLayout>

                <!-- Share with QR -->
                <RelativeLayout
                    android:id="@+id/menuShareQR"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/dialog_button_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/iconQR"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_qr_code" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/iconQR"
                        android:fontFamily="sans-serif-medium"
                        android:text="Share with QR"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="#FFEB3B" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->

</RelativeLayout>